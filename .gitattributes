# Auto detect text files and perform LF normalization
* text=auto

# Dart files
*.dart text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.xml text eol=lf
*.gradle text eol=lf
*.properties text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Lock files (always LF)
pubspec.lock text eol=lf
*.lock text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary
*.db binary
*.sqlite binary
*.sqlite3 binary
